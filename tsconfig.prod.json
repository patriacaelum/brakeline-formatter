{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
	"noImplicitOverride": true,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/__tests__/**.ts"
  ]
}
